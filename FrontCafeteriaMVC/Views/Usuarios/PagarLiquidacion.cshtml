@model FrontCafeteriaMVC.Models.PagoLiquidacionDTO

@{
    ViewData["Title"] = "Pagar Liquidación";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="PagarLiquidacion" method="post">
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contra"></label>
        <input asp-for="Contra" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Realizar Pago</button>

    @if (ViewBag.CreditoLiquidacion != null)
    {
        <div class="alert alert-warning">
            Cantidad a pagar para liquidar cuenta 'liquidación': <strong>@ViewBag.CreditoLiquidacion.ToString("C")</strong>
        </div>
    }
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Mensaje
    </div>
}